<h1>タスク 一覧</h1>

<%= link_to "投稿画面へ", new_task_path %>
<% @tasks.each do |task|%>

<p>
   <%= task.title %>
   <% task.content %>
   <%= link_to "詳細", task_path(task.id) %>
   <%= link_to "編集", edit_task_path(task.id), method: :get %>
   <%= link_to "削除", task_path(task.id),method: :delete, data: { confirm: "削除しますか？" } %>
</p>

<% end %>